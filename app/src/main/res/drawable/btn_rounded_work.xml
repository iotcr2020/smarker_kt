<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <layer-list>
            <item android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:radius="20dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
                    <solid android:color="@color/mainColor" />
                    <padding android:bottom="30dp" android:left="15dp" android:right="15dp" android:top="30dp" />
                    <size android:width="70dp" android:height="40dp" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_focused="true">

        <layer-list>
            <item android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:radius="20dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
                    <solid android:color="@color/mainColor" />
                    <padding android:bottom="30dp" android:left="15dp" android:right="15dp" android:top="30dp" />
                    <size android:width="70dp" android:height="40dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>

        <layer-list>
            <item android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:radius="20dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
                    <solid android:color="@color/overlay_light_80" />
                    <padding android:bottom="30dp" android:left="15dp" android:right="15dp" android:top="30dp" />
                    <size android:width="70dp" android:height="40dp" />
                    <stroke android:width="2dp" android:color="#2cbbb6"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>